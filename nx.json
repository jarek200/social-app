{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "social",
  "affected": {
    "defaultBase": "main"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "lint",
          "test",
          "e2e"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ]
    },
    "lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/biome.json"
      ]
    },
    "test": {
      "inputs": [
        "default",
        "^production"
      ]
    }
  }
}

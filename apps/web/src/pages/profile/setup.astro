---
import BaseLayout from "@layouts/BaseLayout.astro";
import { AuthGuard } from "@components/AuthGuard";
---

<BaseLayout title="Profile Setup">
  <AuthGuard client:load>
    <section class="rounded-3xl border border-white/10 bg-slate-900/60 p-8">
    <header class="mb-6">
      <h1 class="text-2xl font-semibold text-white">Profile Setup</h1>
      <p class="text-sm text-slate-400">Complete your profile so followers know who you are.</p>
    </header>
    <form class="grid gap-5 md:grid-cols-2">
      <label class="grid gap-2 text-sm md:col-span-2">
        <span>Display name</span>
        <input
          type="text"
          placeholder="Ava Martinez"
          class="rounded-xl border border-white/10 bg-slate-950/60 px-3 py-2 text-white focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/40"
        />
      </label>
      <label class="grid gap-2 text-sm">
        <span>Handle</span>
        <input
          type="text"
          placeholder="@ava"
          class="rounded-xl border border-white/10 bg-slate-950/60 px-3 py-2 text-white focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/40"
        />
      </label>
      <label class="grid gap-2 text-sm">
        <span>Upload avatar</span>
        <input
          type="file"
          class="rounded-xl border border-dashed border-white/20 bg-slate-950/30 px-3 py-2 text-white focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/40"
        />
      </label>
      <label class="grid gap-2 text-sm md:col-span-2">
        <span>Bio</span>
        <textarea
          placeholder="Tell the community about yourself..."
          rows="4"
          class="rounded-xl border border-white/10 bg-slate-950/60 px-3 py-2 text-white focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/40"
        ></textarea>
      </label>
      <div class="flex gap-3 md:col-span-2">
        <button type="submit" class="rounded-full bg-brand-500 px-6 py-2 text-sm font-semibold text-white transition hover:bg-brand-400">
          Save profile
        </button>
        <button type="button" class="rounded-full border border-white/20 px-6 py-2 text-sm font-semibold text-white transition hover:border-brand-400 hover:text-brand-200">
          Skip for now
        </button>
      </div>
    </form>
  </section>
  </AuthGuard>
</BaseLayout>

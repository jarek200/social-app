---
import BaseLayout from "@layouts/BaseLayout.astro";
import { ChatConsole } from "@components/ChatConsole";
---

<BaseLayout title="Chat">
  <section class="rounded-3xl border border-white/10 bg-slate-900/60 p-6">
    <header class="mb-4 flex items-center justify-between">
      <div>
        <h1 class="text-xl font-semibold text-white">Team Chat</h1>
        <p class="text-sm text-slate-400">Coordinate moderation escalations and launch events.</p>
      </div>
      <button
        class="rounded-full border border-white/20 px-4 py-2 text-xs font-semibold text-white transition hover:border-brand-400 hover:text-brand-200"
        type="button"
      >
        New channel
      </button>
    </header>
    <ChatConsole client:load />
  </section>
</BaseLayout>

---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getFeedSnapshot } from "../../stores/feed";

export async function getStaticPaths() {
  return getFeedSnapshot().map((item) => ({
    params: { id: item.id },
    props: { item }
  }));
}

const { item } = Astro.props;
---

<BaseLayout title={`Post Â· ${item.authorName}`}>
  <article class="grid gap-6 rounded-3xl border border-white/10 bg-slate-900/60 p-6">
    <header class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
      <div>
        <p class="text-sm font-semibold text-slate-300">{item.authorName}</p>
        <p class="text-xs text-slate-500">{new Date(item.createdAt).toLocaleString()}</p>
      </div>
      <span class="rounded-full bg-emerald-500/20 px-3 py-1 text-xs font-semibold text-emerald-200">
        {item.moderationStatus}
      </span>
    </header>

    <img src={item.imageUrl} alt={item.caption} class="w-full rounded-2xl object-cover" />

    <section class="space-y-2">
      <h1 class="text-xl font-semibold text-white">{item.caption}</h1>
      <div class="flex gap-4 text-sm text-slate-300">
        <span>{item.likes} likes</span>
        <span>{item.comments.length} comments</span>
      </div>
    </section>

    <section class="rounded-2xl border border-white/10 bg-slate-900/70 p-4">
      <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-400">Comments</h2>
      <ul class="mt-3 space-y-3 text-sm text-slate-200">
        {item.comments.map((comment) => (
          <li key={comment.id} class="rounded-xl bg-slate-900 px-3 py-2">
            <span class="font-semibold text-white">{comment.authorName}</span> {comment.text}
          </li>
        ))}
        {item.comments.length === 0 && <li class="text-slate-400">No comments yet.</li>}
      </ul>
      <form class="mt-4 grid gap-3 text-sm">
        <textarea
          rows="3"
          placeholder="Add a comment..."
          class="rounded-xl border border-white/10 bg-slate-950/60 px-3 py-2 text-white focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/40"
        ></textarea>
        <button class="w-fit rounded-full bg-brand-500 px-4 py-2 font-semibold text-white transition hover:bg-brand-400">
          Comment
        </button>
      </form>
    </section>
  </article>
</BaseLayout>

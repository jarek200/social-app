---
import { AuthForm } from "@components/AuthForm";
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout showNav={false} title="Sign in">
  <section class="mx-auto w-full max-w-md rounded-3xl border border-white/10 bg-slate-900/70 p-8 text-slate-100">
    <div class="mb-6 text-center">
      <p class="text-sm font-semibold uppercase tracking-wide text-slate-400">Access</p>
      <h1 class="text-2xl font-bold text-white">Sign in to Social Ops</h1>
    </div>
    <AuthForm client:load />
  </section>
</BaseLayout>

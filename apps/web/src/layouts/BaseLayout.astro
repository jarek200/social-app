---
import "../styles/global.css";
import PrimaryNav from "../components/PrimaryNav.astro";

const {
  title = "Social App Prototype",
  description = "Real-time social photo sharing built on AWS serverless",
  showNav = true
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-slate-950 text-slate-100">
    <main class="mx-auto flex w-full max-w-6xl flex-col gap-10 px-6 py-12">
      {showNav && <PrimaryNav />}
      <slot />
    </main>
  </body>
</html>
